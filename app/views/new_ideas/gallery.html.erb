<% title = "Güney Kore'de Yangın" %>
<%= title title %>
<%= stylesheet_link_tag "new_ideas" %>
<% render 'new_ideas_nav' %>

<div class="page">
  <div class="page-header">
    <h1 class="h2">
      Güney Kore'de Yangın
      <small class="pull-right"><%= t 'gallery.gallery' %></small>
    </h1>
  </div>

  <div class="row">
    <div class="col-md-9">
      <%= idea_body do %>


        <div class="gallery">
          <div class="carousel slide">

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <div class="item active">
                <%= image_tag "gallery_image_2.jpg" %>
              </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        
        <p>Brezilya'nın Sao Paulo kentinde çıkan yangında 300 kadar aile her şeyini kaybetti.</p>

      <% end %>


      <% Faker::Number.digit.to_i.times do %>
        <%= idea_comment user_image: random_avatar_image do %>
          <%= Faker::Lorem.paragraph %>
        <% end %>
      <% end %>

      <%= render 'comments/user_not_signed_in' %>

    </div>
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t 'common.nav' %>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4">
              <a href="#">
                <%= image_tag "gallery_image_1.jpg", class: "img-responsive img-rounded"%>
              </a>
            </div>
            <div class="col-md-4">
              <a href="#">
                <%= image_tag "gallery_image_2.jpg",
                    class: "img-responsive img-rounded",
                    style: "opacity: .7" %>
              </a>
            </div>
            <div class="col-md-4">
              <a href="#">
                <%= image_tag "gallery_image_3.jpg",
                    class: "img-responsive img-rounded" %>
              </a>
            </div>
          </div>

          <p><%= t 'gallery.nav_info' %></p>

        </div>
      </div>


      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t 'common.similarly' %>
        </div>
        <ul class="list-group">
          <li class="list-group-item"><a href="#">Güney Kore'de yangın: Yaşlı hastalar alevlerin ortasında kaldı</a></li>
          <li class="list-group-item"><a href="#">Güney Kore'de hastane yangını: 21 ölü</a></li>
          <li class="list-group-item"><a href="#">Samsung'un Güney Kore'deki fabrikasında yangın çıktı</a></li>
          <li class="list-group-item"><a href="#">Güney Kore'de konser faciası: 14 ölü</a></li>
          <li class="list-group-item"><a href="#">Güney Kore'de nükleer santral kazası: 3 ölü</a></li>
          <li class="list-group-item"><a href="#">Kuzey Kore-Güney Kore yakınlaşması</a></li>
          <li class="list-group-item"><a href="#">Güney Kore Dışişleri Bakanı Davos'a gidiyor</a></li>
        </ul>
      </div>
    </div>
  </div>

</div>