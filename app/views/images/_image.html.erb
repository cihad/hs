<%= div_for image, class: "thumbnail" do %>
  <%= image_tag image.image_url(:medium),
                class: "img-responsive",
                alt: image.title,
                title: image.title %>
  <div class="caption">
    <p><%= link_to_unless current_page?(image), image.title, image %></p>
  </div>  
<% end %>
