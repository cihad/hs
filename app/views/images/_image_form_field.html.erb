<div class="thumbnail">
  <div class="fileinput fileinput-new" data-provides="fileinput">
    <div class="fileinput-preview thumbnail" data-trigger="fileinput">
      <%= image_tag "noimage.gif", class: "img-responsive" %>
    </div>
    <div>
      <%= i.text_field  :title,
                        class: "form-control input-sm",
                        placeholder: t('images.title') %>
                        
      <span class="btn btn-sm btn-default btn-file">
        <span class="fileinput-new"><%= t 'images.select_image' %></span>
        <span class="fileinput-exists"><%= t 'images.change_image' %></span>
        <%= i.file_field :image %>
      </span>

      <a href="#" class="btn btn-mini btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
    </div>
  </div>
</div>