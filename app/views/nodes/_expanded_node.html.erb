<div class="page-header">
  <h1 class="h2"><%= node.title %></h1>
</div>

<div class="row fragment">
  <div class="col-md-1 col-sm-1 hidden-xs node-left">
    <%= image_tag gravatar_url_for(node.author.email), class: "img-circle img-responsive" %>
  </div>

  <div class="col-md-11 col-sm-11 col-xs-12">
    <div class="panel panel-default">
      <div class="arrow hidden-print hidden-xs"></div>

        <div class="panel-body">

          <article>
            <p>
              <%= node.author.username %>: 
            </p>
            <div class="img-scroller">
              <%= render node.images %>
            </div>
            <%= markdown node.body %>
          </article>
        </div>

        <div class="navbar navbar-fixed-bottom panel-footer">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#<%= dom_id node %>">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <div class="collapse navbar-collapse" id="<%= dom_id node %>">
              <%= render node.tags %>

              <ul class="nav navbar-nav navbar-right">
                <li>
                  <div class="navbar-text text-muted">
                    <%= time_tag node.created_at %>
                  </div>
                </li>
                
                <li class="dropdown dropup">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-cog"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <% if policy(node).edit? %>
                      <li>
                        <%= link_to edit_node_path(node) do %>
                          <span class="glyphicon glyphicon-edit"></span>
                          <%= t 'common.edit' %>
                        <% end %>
                      </li>
                    <% end %>

                    <% if policy(node).destroy? %>
                      <li>
                        <%= link_to node, method: :delete, data: { confirm: t('common.are_you_sure') } do %>
                          <span class="glyphicon glyphicon-trash"></span>
                          <%= t 'common.delete' %>
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                </li>

              </ul>
            </div>
          </div>
        </div>
        
      </div>
    </div>    
  </div>
</div>
