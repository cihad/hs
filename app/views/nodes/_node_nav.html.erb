<p class="navbar-text">
  <%= render node.tags %>
</p>

<ul class="nav navbar-nav navbar-right">
  <li>
    <div class="navbar-text text-muted">
      <%= time_tag node.created_at %>
    </div>
  </li>
  
  <li class="dropdown dropup">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
      <span class="glyphicon glyphicon-cog"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <% if policy(node.content).edit? %>
        <li>
          <%= link_to edit_node_path(node) do %>
            <span class="glyphicon glyphicon-edit"></span>
            <%= t 'common.edit' %>
          <% end %>
        </li>
      <% end %>

      <% if policy(node.content).destroy? %>
        <li>
          <%= link_to node, method: :delete, data: { confirm: t('common.are_you_sure') } do %>
            <span class="glyphicon glyphicon-trash"></span>
            <%= t 'common.delete' %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>

</ul>