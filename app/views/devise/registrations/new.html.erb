<% title t('registrations.register') %>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default panel-login">
      <div class="panel-body">
      
        <h2><%= t 'registrations.register' %></h2>

        <%= simple_form_for resource,
                            as: resource_name,
                            url: registration_path(resource_name),
                            wrapper: :horizontal_form,
                            wrapper_mappings: {
                              check_boxes: :horizontal_radio_and_checkboxes,
                              radio_buttons: :horizontal_radio_and_checkboxes,
                              file: :horizontal_file_input,
                              boolean: :horizontal_boolean,
                              submit: :horizontal_submit,
                              button: :horizontal_submit
                            }, 
                            html: { class: 'form-horizontal' } do |f| %>
          <%= f.error_notification %>

          <%= f.input :name, autofocus: true %>
          <%= f.input :username %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: (t('registrations.minimum_password_length', length: @minimum_password_length) if @validatable) %>
          <%= f.input :password_confirmation, required: true %>

          <%= submit_button f: f, button_text: I18n.t('registrations.register') %>
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

